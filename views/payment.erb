<form action="/payment/results">
  <div>
    <label for="apr">APR</label>
    <input id="apr" name="apr" placeholder="E.g. 5.42" type="text">
  </div>

  <div>
    <label for="years">Number of years</label>
    <input id="years" name="years" placeholder="How many years to repay?" type="text">
  </div>

  <div>
    <label for="principal">Principal</label>
    <input id="principal" name="principal" placeholder="How much principal?" type="text">
  </div>

  <button>Calculate monthly payment</button>
</form>
